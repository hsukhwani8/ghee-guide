    <script>
        const wrapLabel = (label, maxLength = 16) => {
            if (typeof label !== 'string' || label.length <= maxLength) return label;
            const words = label.split(' ');
            const lines = [];
            let currentLine = '';
            for (const word of words) {
                if ((currentLine + ' ' + word).trim().length > maxLength && currentLine.length > 0) {
                    lines.push(currentLine);
                    currentLine = word;
                } else {
                    currentLine = (currentLine + ' ' + word).trim();
                }
            }
            if (currentLine.length > 0) {
                lines.push(currentLine);
            }
            return lines;
        };

        const tooltipTitleCallback = (tooltipItems) => {
            const item = tooltipItems[0];
            let label = item.chart.data.labels[item.dataIndex];
            return Array.isArray(label) ? label.join(' ') : label;
        };

        const palette = {
            red: '#E53E3E',
            orange: '#F3722C',
            teal: '#43AA8B',
            slate: '#577590',
            green: '#90BE6D',
            yellow: '#F9C74F',
        };

        // Vitamin Chart
        const vitaminCtx = document.getElementById('vitaminChart');
        if (vitaminCtx) {
            new Chart(vitaminCtx, {
                type: 'bar',
                data: {
                    labels: ['Vitamin A', 'Vitamin D', 'Vitamin E', 'CLA (Healthy Fat)'],
                    datasets: [{
                        label: 'Bilona Ghee',
                        data: [90, 85, 95, 92],
                        backgroundColor: palette.teal,
                        borderRadius: 4
                    }, {
                        label: 'Commercial Ghee',
                        data: [40, 35, 45, 30],
                        backgroundColor: palette.red,
                        borderRadius: 4
                    }]
                },
                options: {
                    maintainAspectRatio: false,
                    scales: {
                        y: {
                            beginAtZero: true,
                            ticks: { callback: value => value + '%' },
                            title: { display: true, text: 'Estimated Nutrient Retention' }
                        }
                    },
                    plugins: {
                        tooltip: { callbacks: { title: tooltipTitleCallback } },
                        legend: { position: 'bottom' }
                    }
                }
            });
        }
        
        // Quality Radar Chart
        const qualityRadarCtx = document.getElementById('qualityRadarChart');
        if (qualityRadarCtx) {
            const qualityLabels = ['Purity & Authenticity', 'Sattvic Quality (Prana)', 'Digestibility', 'HDL Support', 'Probiotic Benefit'];
            new Chart(qualityRadarCtx, {
                type: 'radar',
                data: {
                    labels: qualityLabels.map(l => wrapLabel(l)),
                    datasets: [{
                        label: 'Bilona Ghee',
                        data: [9, 9, 8, 8, 9],
                        backgroundColor: 'rgba(67, 170, 139, 0.2)',
                        borderColor: palette.teal,
                        pointBackgroundColor: palette.teal,
                    }, {
                        label: 'Commercial Ghee',
                        data: [5, 3, 4, 4, 2],
                        backgroundColor: 'rgba(229, 62, 62, 0.2)',
                        borderColor: palette.red,
                        pointBackgroundColor: palette.red,
                    }]
                },
                options: {
                    maintainAspectRatio: false,
                    scales: {
                        r: {
                            angleLines: { color: 'rgba(0, 0, 0, 0.1)' },
                            grid: { color: 'rgba(0, 0, 0, 0.1)' },
                            suggestedMin: 0,
                            suggestedMax: 10,
                            pointLabels: { font: { size: 11 } }
                        }
                    },
                    plugins: {
                        tooltip: { callbacks: { title: tooltipTitleCallback } },
                        legend: { position: 'bottom' }
                    }
                }
            });
        }

        // Cost Chart
        const costCtx = document.getElementById('costChart');
        if(costCtx) {
             const costLabels = ['Typical Supermarket Ghee', 'Bilona Ghee (1L)', 'Bilona Ghee (5L Value)'];
             new Chart(costCtx, {
                type: 'bar',
                data: {
                    labels: costLabels.map(l => wrapLabel(l, 20)),
                    datasets: [{
                        label: 'Est. Cost per Litre (AUD)',
                        data: [25, 80, 62],
                        backgroundColor: [palette.slate, palette.orange, palette.green],
                        borderRadius: 4
                    }]
                },
                options: {
                    indexAxis: 'y',
                    maintainAspectRatio: false,
                    scales: {
                        x: {
                            beginAtZero: true,
                            ticks: { callback: value => '$' + value }
                        }
                    },
                    plugins: {
                        tooltip: { callbacks: { title: tooltipTitleCallback } },
                        legend: { display: false }
                    }
                }
            });
        }

        // Ghee Recipe Helper
        const generateRecipeBtn = document.getElementById('generateRecipeBtn');
        const ingredientsInput = document.getElementById('ingredientsInput');
        const recipeResultDiv = document.getElementById('recipeResult');

        generateRecipeBtn.addEventListener('click', async () => {
            const ingredients = ingredientsInput.value.trim();
            if (!ingredients) {
                recipeResultDiv.innerHTML = `<p class="text-red-600 text-center">Please enter some ingredients.</p>`;
                return;
            }

            recipeResultDiv.innerHTML = `<div class="flex justify-center items-center py-4"><div class="loader"></div></div>`;
            generateRecipeBtn.disabled = true;

            const prompt = `You are an expert in Ayurvedic and Sattvic cooking. Create a simple, healthy, and Sattvic recipe (promoting purity, clarity, and balance) using the following ingredients: ${ingredients}. The recipe must prominently feature Bilona Ghee. Also, include common spices like turmeric, cumin, and coriander if appropriate. The recipe should be suitable for a balanced, spiritual diet. Provide the output in UK English.`;
            
            const payload = {
              contents: [{ role: "user", parts: [{ text: prompt }] }],
              generationConfig: {
                  responseMimeType: "application/json",
                  responseSchema: {
                      type: "OBJECT",
                      properties: {
                          recipeName: { type: "STRING", description: "The name of the Sattvic dish." },
                          description: { type: "STRING", description: "A short, appealing description of the recipe." },
                          ingredients: {
                              type: "ARRAY",
                              items: { type: "STRING" },
                              description: "A list of all ingredients required for the recipe."
                          },
                          instructions: {
                              type: "ARRAY",
                              items: { type: "STRING" },
                              description: "The step-by-step instructions to prepare the dish."
                          }
                      },
                      required: ["recipeName", "description", "ingredients", "instructions"]
                  }
              }
            };
            
            const apiKey = "";
            const apiUrl = `https://generativelanguage.googleapis.com/v1beta/models/gemini-2.0-flash:generateContent?key=${apiKey}`;

            try {
                const response = await fetch(apiUrl, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(payload)
                });

                if (!response.ok) {
                   const errorBody = await response.text();
                   throw new Error(`API error: ${response.status} ${response.statusText}. Response: ${errorBody}`);
                }

                const result = await response.json();
                
                if (result.candidates && result.candidates[0].content && result.candidates[0].content.parts && result.candidates[0].content.parts.length > 0) {
                    const recipeJson = result.candidates[0].content.parts[0].text;
                    const recipe = JSON.parse(recipeJson);
                    displayRecipe(recipe);
                } else {
                   throw new Error("Could not generate a recipe. The model returned an empty response.");
                }

            } catch (error) {
                console.error(error);
                recipeResultDiv.innerHTML = `<p class="text-red-600 text-center">Sorry, an error occurred while creating your recipe. Please try again.</p>`;
            } finally {
                generateRecipeBtn.disabled = false;
            }
        });

        function displayRecipe(recipe) {
            const ingredientsHtml = recipe.ingredients.map(ing => `<li class="flex items-start"><span class="mr-2 mt-1" style="color: ${palette.teal};">‚ñ™</span>${ing}</li>`).join('');
            const instructionsHtml = recipe.instructions.map((step, index) => `<li class="mb-3 flex items-start"><strong class="mr-2 text-orange-500">${index + 1}.</strong><span>${step}</span></li>`).join('');

            recipeResultDiv.innerHTML = `
                <div class="bg-gray-50 p-6 rounded-xl border border-gray-200 mt-6">
                    <h3 class="text-2xl font-bold mb-2" style="color: ${palette.orange};">${recipe.recipeName}</h3>
                    <p class="text-gray-600 mb-6 italic">"${recipe.description}"</p>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 md:gap-8">
                        <div>
                            <h4 class="font-bold text-lg mb-2">Ingredients:</h4>
                            <ul class="space-y-1 text-gray-700">${ingredientsHtml}</ul>
                        </div>
                        <div>
                            <h4 class="font-bold text-lg mb-2">Instructions:</h4>
                            <ol class="space-y-2 text-gray-700">${instructionsHtml}</ol>
                        </div>
                    </div>
                </div>
            `;
        }
    </script>
</body>
</html>
